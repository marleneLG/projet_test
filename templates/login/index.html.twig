{% extends 'base.html.twig' %}

{% block content %}
{% if error %}
<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<section class="py-5 mx-auto l-container register">
    <div>
        <h3 class="text-center pb-5">Login</h3>
    </div>
    <form method="post" class="py-3 px-4 mx-4 bg-light register-form">

        <div class="form-group text-center">
            <label for="username" class="py-3">Email</label>
            <input type="email" value="{{ last_username }}" name="email" class="form-control" placeholder="Enter Email"
                required autofocus>
        </div>
        <div class="form-group text-center">
            <label for="inputPassword" class="py-3">Password</label>
            <input type="password" name="password" class="form-control" placeholder="Enter Password" required>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </div>

        <div class="text-center py-3">
            <a class="d-block my-3" href="{{ path('app_register') }}">Register</a>
            <a class="d-block" href="{{ path('reset-password') }}">Forgot Password ?</a>
            <button type="submit" class="btn mx-auto my-3 d-sm-block">login</button>
        </div>
    </form>
</section>
{% endblock %}